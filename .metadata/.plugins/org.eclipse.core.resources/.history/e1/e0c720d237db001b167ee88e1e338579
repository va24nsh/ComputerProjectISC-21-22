package programs;

import java.util.*;

public class Q12 {
	int number;
	int count;
	Q12(int n) {
		number = n;
		count = 0;
	}
	
	void calc() {
		// count digits
		int count = 0;
		int temp = number;
		while(temp>0) {
			temp /= 10;
			count++;
			if(number == temp%10) System.exit(0);
		}
		
		// array to  store the digits
		int arr[] = new int[count];
	    temp = number;
		for(int i=count-1 ; i>=0; i--) {
			arr[i] = temp%10;
			temp /= 10;
		}
		calc(arr);
	}
	
	void calc(int ar[]) {
		try {
			while(true) {
				int sum = 0;
				for(int i=0 ; i<count ; i++) {
					sum += ar[i];
				}
				System.out.println(sum);
				if(sum == number) {
					System.out.println("yes");
					System.exit(0);
				}
				for(int i=0 ; i<count-1; i++) {
					ar[i] = ar[i+1];
				}
			}
		}
		catch(Exception e) {
			System.out.println("Not a keith number");
		}
	}
	
	public static void main(String[] a) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter a number ");
		int num = sc.nextInt();
		Q12 obj = new Q12(num);
		obj.calc();
		sc.close();
	}
}
