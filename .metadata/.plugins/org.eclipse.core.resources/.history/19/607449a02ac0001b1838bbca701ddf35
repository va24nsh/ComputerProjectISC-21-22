package programs;

import java.util.*;

public class Q7 {
	public static void main(String[] a) {
		// Input
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the order of matrix: ");
		int n = sc.nextInt();
		System.out.println("Enter the elements in the array: ");
		int arr[][] = new int[n][n];
		for(int i=0; i<n; i++) {
			for(int j=0; j<n; j++) {
				arr[i][j] = sc.nextInt();
			}
		}
		
		// Sort 
		for(int k=0; k<n; k++) {
			for(int i=0; i<n; i++) {
				for(int j=0; j<n-1-i; j++) {
					if(arr[k][j] > arr[k][j+1]) {
						int temp = arr[k][j];
						arr[k][j] = arr[k][j+1];
						arr[k][j+1] = temp;
					}
				}
			}
		}
		
		// Display
		for(int i=0; i<n; i++) {
			for(int j=0; j<n; j++) {
				System.out.print(arr[i][j]+" ");
			}
			System.out.println();
		}
	}
}
